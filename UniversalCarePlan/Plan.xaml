<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UniversalCarePlan.Plan">
  <ContentPage.Content>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="930" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Label HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" Text="   CARE PLAN" FontSize="30" FontAttributes="Bold" TextColor="Crimson" TextDecorations="Underline" Margin="0,5,0,0" Grid.Row="0" Grid.Column="0"></Label>

            <ScrollView Grid.Row="1" Grid.RowSpan="1" Grid.Column="0" Grid.ColumnSpan="3" BackgroundColor="AliceBlue">

                <StackLayout x:Name="RecomStack" BackgroundColor="AliceBlue" HorizontalOptions="StartAndExpand" VerticalOptions="StartAndExpand" Padding="10,10,10,0" Spacing="25"></StackLayout>
            </ScrollView>

            <Button Text="EXPORT (PDF)" Grid.Row="2" Grid.Column="0" x:Name="exportPDF"></Button>

            <Button Text="EXPORT (JSON)" Grid.Row="2" Grid.Column="1" x:Name="exportJSON"></Button>
        </Grid>

    </ContentPage.Content>
</ContentPage>